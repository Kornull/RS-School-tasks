{
  "plugins": [ "import","@typescript-eslint","prettier"],
  "extends": [
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-debugger": "off",
    "no-console": 0,
    "no-explicit-any":"off",
    "class-methods-use-this": "off",
    "@typescript-eslint/no-explicit-any": 2
  },
  "ignorePatterns": ["webpack.**", "dist"]
}